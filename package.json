  },
  "files": [
    "lib",
    "package.json"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "yarn clean && tsc -p ./tsconfig.build.json",
    "clean": "rimraf ./lib",
    "cli": "node ./lib/cli.js",
    "commit": "npx git-cz",
    "cruiser": "dependency-cruiser --validate .dependency-cruiser.json src",
    "develop": "yarn build --watch",
    "format": "prettier --config .prettierrc --write src/*.{ts,tsx}",
    "lint": "eslint -c ./.eslintrc.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "start": "yarn develop",
    "test": "yarn test:jest",
    "test:ci": "yarn test && codecov",
    "test:jest": "jest -c ./jest.config.json",
    "test:watch": "yarn test:jest --watch",
    "version_up": "lerna version --yes"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "conventional-changelog-angular-all": "^1.7.0",
    "eslint": "^6.6.0",
    "generate-changelog": "^1.8.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sort-package-json": "^1.23.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}
