  "keywords": [],
  "homepage": "https://github.com/recursive-add-prefix#readme",
  "bugs": {
    "url": "https://github.com/recursive-add-prefix/issues"
  },
  "repository": "recursive-add-prefix",
  "license": "MIT",
  "author": {
    "name": "Himenon",
    "email": "k.himeno314@gmail.com",
